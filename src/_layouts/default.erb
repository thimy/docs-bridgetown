<!doctype html>
<html lang="<%= site.locale %>">
  <head>
    <%= render "head", metadata: site.metadata, title: data.title %>
  </head>
  <body class="<%= data.page_class %>">
    <%# lit :bump_navbar, logo: relative_url('/images/bump-logo.svg') %>
    <%= render Shared::Navbar.new(metadata: site.metadata, resource: resource) %>

    <% if data.sidebar %>
      <%= render Help::Sidebar.new(metadata: site.metadata, resource: resource, sidebar: site.data.sidebar, page_list: collections.pages.resources, current: resource) %>
    <% end %>

    <main>
      <%= yield %>
    </main>

    <%= render "footer", metadata: site.metadata %>
  </body>
</html>
